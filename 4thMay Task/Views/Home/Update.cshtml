@model AdoMVC.Models.Customer;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Edit";
}
@using (var form = Html.BeginForm("Upd", "Home", FormMethod.Post))
{
<table>
    <tr><th>Delete Customer</th></tr>
    <tr>
        <td>CustomerID</td>
        <td>@Html.TextBoxFor(m => m.CustomerID)</td>
    </tr>
    <tr>
        <td>CustomerName:</td>
        <td>@Html.TextBoxFor(m => m.CustomerName)</td>
    </tr>
    <tr>
        <td>EmailID:</td>
        <td>@Html.TextBoxFor(m => m.EmailID)</td>
    </tr>
    <tr>
        <td>MobileNo:</td>
        <td>@Html.TextBoxFor(m => m.MobileNo)</td>
    </tr>
    <tr>
        <td>
            <input type="submit" name="Edit" />
        </td>
    </tr>
</table>
}